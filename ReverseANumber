package com.java;
import java.util.*;
public class ReverseAnumber
{
	public static void main(String[] args)
	{
		int a,rev=0,rem,temp;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter Number:");
		a=sc.nextInt();
		temp=a;
		while(a!=0)
		{
			rem= a%10;
			rev=rev*10+rem;
			a=a/10;
		}
		System.out.println("The reversed Number of "+temp+ " is: "+rev);
	}
}
